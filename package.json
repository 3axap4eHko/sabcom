{
  "name": "sabcom",
  "version": "0.0.25",
  "description": "A TypeScript/Node.js library for inter-thread communication using SharedArrayBuffer with atomic operations and V8 serialization",
  "type": "module",
  "types": "build/index.d.ts",
  "main": "build/index.cjs",
  "module": "build/index.js",
  "exports": {
    "require": "./build/index.cjs",
    "import": "./build/index.js"
  },
  "files": [
    "build",
    "src/index.ts"
  ],
  "scripts": {
    "build": "rm -rf build && inop src build -i __tests__ -i *.tmp.ts && tsc --declaration --emitDeclarationOnly",
    "lint": "eslint src",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/3axap4eHko/sabcom.git"
  },
  "keywords": [
    "SharedArrayBuffer",
    "shared",
    "atomic",
    "buffer",
    "thread",
    "worker",
    "communication",
    "concurrency",
    "parallel",
    "multithreading",
    "ipc",
    "inter-process",
    "v8",
    "serialization",
    "synchronization",
    "memory"
  ],
  "license": "Apache-2.0",
  "author": {
    "name": "Ivan Zakharchanka",
    "email": "3axap4eHko@gmail.com",
    "url": "https://linkedin.com/in/3axap4eHko"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "inop": "^0.7.8",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.14.0"
}
